#include <stdio.h>
#include <math.h>

int main() {
    int num;
    double n;

    printf("Enter a number: ");
    scanf("%d", &num);

    // Check if the number is a triangle number
    n = (sqrt(8 * num + 1) - 1) / 2;
    if (n == (int)n) {
        printf("%d is a triangle number\n", num);
    } else {
        printf("%d is not a triangle number\n", num);
    }

    return 0;
}

